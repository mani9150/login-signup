<html>
    <head>
        <title>Register</title>
    </head>
    <style>
        body{
            padding:0px;
            margin: 0px;
            font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;

        }
        .a{
            background-image: linear-gradient(rgb(48, 140, 245),rgba(255, 255, 255, 0.301));
            height: 85vh;
            padding: 10% 0% 5% 0%;
            margin:0% ;
        }
        
        .b{
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }
        .c{
            background-image: linear-gradient(rgb(48, 140, 245),white);
            border: 4px solid rgba(251, 250, 248, 0.741);
            border-radius: 30px;
            height: 100%;
            width: 500px;
            text-align: center;
            padding: 20px;
            margin-bottom: 40px;
        }
        button{
            background-color: rgba(255, 255, 255, 0.537);
            border-color:rgb(48, 140, 245);
            height: 40px;
            width: 150px;
            border-radius: 20px;
            font-size: 20px;
        }
        input{
            height: 35px;
            width: 230px;
            border-radius: 10px;
            background-color: rgba(240, 236, 236, 0.492);
            font-size: 20px;
            border-color: rgb(48, 140, 245);
        }
        label{
            font-size: 25px;
            color: rgb(77, 71, 71);
        }
        .r:hover{
            background-image: linear-gradient(rgba(255, 42, 0, 0.807),white);
        }
        .cl:hover{
            background-image: linear-gradient(rgb(15, 79, 231),white);
        }
        .l:hover{
            background-image: linear-gradient(rgb(42, 244, 42),white);
        }
        input:hover{
            border-color: white;
        }
        .g{
            width: 50px;
            height: 30px;
            
        }
        a{
            all: unset;
        }
    </style>
    <body>
        <div class="a">
            <div class="container-fluid">
                <div class="b">
                    <div class="c">
                        <h1>User Register</h1>
                        <form method="post">
                            <label for="">Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;</label>
                            <input type="text" name="name" required><br><br>
                
                            <label for="">Date of Birth : &nbsp;</label>
                            <input type="date" name="dob"><br><br>
                
                            <label for="">Age &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;</label>
                            <input type="number" name="age"><br><br>
        
                            <label for="">Mobile No. &nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;</label>
                            <input type="number" name="no"><br><br>
                
                            <label for="">E-Mail id &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;</label>
                            <input type="email" name="email" required><br><br>
                
                            <label for="">Username &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;</label>
                            <input type="text" name="username" required><br><br>
                
                            <label for="">Password &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;</label>
                            <input type="password" name="password" required><br><br>
                
                                    <button class="l" type="submit">Submit</button>&nbsp;&nbsp;&nbsp;
                                    <button class="cl" type="reset">Clear</button><br><br>
                                    <button class="r"><a href="/">Cancel</a></button>
        
                        </form>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>