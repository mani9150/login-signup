<html>
    <head>
        <title>Login</title>
    </head>
    <style>
        body{
            padding:0px;
            margin: 0px;
            font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;

        }
        .a{
            background-image: linear-gradient(rgb(48, 140, 245),rgba(255, 255, 255, 0.301));
            height: 70vh;
            padding: 10% 0% 5% 0%;
            margin:0% ;
            
        }
        .b{
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }
        .c{
            background-image: linear-gradient(rgb(48, 140, 245),white);
            border: 4px solid rgba(251, 250, 248, 0.741);
            border-radius: 30px;
            height: 33  0px;
            width: 300px;
            text-align: center;
        }
        button{
            background-color: rgba(255, 255, 255, 0.537);
            border-color:rgb(48, 140, 245);
            height: 40px;
            width: 150px;
            border-radius: 20px;
            font-size: 20px;
        }
        input{
            height: 35px;
            width: 230px;
            border-radius: 10px;
            background-color: rgba(240, 236, 236, 0.492);
            font-size: 20px;
            border-color: rgb(48, 140, 245);
        }
        label{
            font-size: 25px;
            color: rgb(77, 71, 71);
        }
        button:hover{
            background-image: linear-gradient(rgb(48, 140, 245),white);
        }
        .l:hover{
            background-image: linear-gradient(rgb(48, 140, 245),white);
        }
        input:hover{
            border-color: white;
        }
    </style>
    <body><div class="a">
        <div class="container-fluid">
            <div class="b">
                <div class="c">
                    <h1>Login</h1>
                    <form method="post" >
                        <label for="">Username</label><br>
                        <input type="text" name="username" required><br><br>
    
                        <label for="">Password</label><br>
                        <input type="password" name="password"><br><br>
    
                        <div class="d">
                            <button  class="l" type="submit">Login</button><br>
                        </div>
                    </form><br>
                    <h5>New User <a href="/register">Register Now</a></h5>
                </div>
            </div>
        </div>
        
    </div>
    </body>
</html>
